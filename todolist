import tkinter as tk
from tkinter import messagebox

def add_task():
    task = task_entry.get()
    if task != "":
        tasks_listbox.insert(tk.END, task)
        task_entry.delete(0, tk.END)
    else:
        messagebox.showwarning("Warning", "Please enter a task!")


def delete_task():
    try:
        selected_task_index = tasks_listbox.curselection()[0]
        tasks_listbox.delete(selected_task_index)

        
        tasks = tasks_listbox.get(0, tk.END)
        with open("tasks.txt", "w") as f:
            for task in tasks:
                f.write(task + "\n")

        messagebox.showinfo("Success", "Task deleted successfully!")
    except:
        messagebox.showwarning("Warning", "Please select a task to delete!")


def save_tasks():
    tasks = tasks_listbox.get(0, tk.END)
    with open("tasks.txt", "w") as f:
        for task in tasks:
            f.write(task + "\n")
    messagebox.showinfo("Success", "Tasks saved successfully!")

def load_tasks():
    try:
        with open("tasks.txt", "r") as f:
            tasks = f.readlines()
            for task in tasks:
                tasks_listbox.insert(tk.END, task.strip())
    except FileNotFoundError:
        pass

root = tk.Tk()
root.title("To-Do List App")
root.geometry("400x400")
root.config(bg="#f0f0f0")

task_entry = tk.Entry(root, width=30, font=("Arial", 12))
task_entry.pack(pady=10)

btn_frame = tk.Frame(root, bg="#f0f0f0")
btn_frame.pack()

add_btn = tk.Button(btn_frame, text="Add Task", command=add_task, width=10, bg="lightgreen")
add_btn.grid(row=0, column=0, padx=5)

delete_btn = tk.Button(btn_frame, text="Delete Task", command=delete_task, width=10, bg="pink")
delete_btn.grid(row=0, column=1, padx=5)

save_btn = tk.Button(btn_frame, text="Save Tasks", command=save_tasks, width=10, bg="lightblue")
save_btn.grid(row=0, column=2, padx=5)

tasks_listbox = tk.Listbox(root, width=40, height=15, font=("Arial", 12))
tasks_listbox.pack(pady=10)

load_tasks()
root.mainloop()
